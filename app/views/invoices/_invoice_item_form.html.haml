.invoice_items
  %h3= t('invoicer.invoice_items')
  .invoice_item
    = f.simple_fields_for :invoice_items do |ii|
      = ii.input :description, :label => t('invoicer.description')
      = ii.input :started_at, :label => t('invoicer.started_at'), :input_html => {:type => :datetime}
      = ii.input :ended_at, :label => t('invoicer.ended_at'), :input_html => {:type => :datetime}
      = render :partial => 'pause_form', :locals => {:ii => ii}
      = ii.input :pricing_strategy, :label => t('invoicer.pricing_strategy')
      = ii.input :vat_rate, :label => t('invoicer.vat_rate')
      = ii.input :price, :label => t('invoicer.price')


