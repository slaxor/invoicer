%h1 Invoices
%p
  = link_to 'edit', edit_invoice_path(@invoice)
  = link_to 'pdf', invoice_path(@invoice, :format => :pdf)

%dl
  %dt customer
  %dd= link_to @invoice.customer.name, customer_path(@invoice.customer)
  %dt number
  %dd= @invoice.number
  %dt purchase_order
  %dd= @invoice.purchase_order
  %dt currency
  %dd= @invoice.currency
  %dt covering_text
  %dd= @invoice.covering_text
  %dt invoicing_party
  %dd= link_to @invoice.invoicing_party.name, invoicing_party_path(@invoice.invoicing_party)
  %dt workflow_state
  %dd= @invoice.current_state
  %dt due_on
  %dd= @invoice.due_on
  %dt invoice_items
  %dd= @invoice.invoice_items
  -#%dt= render :partial => 'invoice_items'
  %dt history
  %dd
    - @invoice.history.each do |entry|
      .history
        = "at #{entry['when']} #{entry['triggering_event']} changed from #{entry['from']} to #{entry['to']}"
