%table
  %thead
    %th.history_when= t('when')
    %th.history_event= t('event')
    %th.history_from= t('from')
    %th.history_to= t('to')
  %tbody
    - (invoice || @invoice).history.each do |history|
      %tr
        %td= l(history['when'], :format => :numeric) rescue 'INVALID :('
        %td= t(history['triggering_event'])
        %td= t(history['from'])
        %td= t(history['to'])

