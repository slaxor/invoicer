= form_for(@user) do |f|
  - if @user.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@user.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg

  %img{:src => "data:image/jpeg;base64,#{Base64.encode64(@user.avatar.read)}"}
  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .actions
    = f.submit
